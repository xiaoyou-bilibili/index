* {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
	outline: 0;
	font-family: 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB',
		'Microsoft YaHei', '微软雅黑', Arial, sans-serif;
}
html {
	height: 100%;
}
body {
	height: 100%;
	font-size: 16px;
	overflow-x: hidden;
}
a {
	text-decoration: none;
}
img {
	vertical-align: middle;
}
p {
	line-height: 24px;
}
